    def binarizuj(self, obrazek, prahova_hodnota):
        sirka, vyska = obrazek.size
        x = 0
        while x < sirka:
            y = 0
            while y < vyska:
                r, g, b = obrazek.getpixel((x,y))
                prumer = int((r+g+b)/3)
                if prumer > prahova_hodnota:
                    obrazek.putpixel((x,y), (255, 255, 255))
                else:
                    obrazek.putpixel((x,y), (0, 0, 0))
                y += 1
            x += 1
        display(obrazek)
