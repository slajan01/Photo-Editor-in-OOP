from PIL import Image

class Editor:

    def __init__(self):
        pass

    def zvys_kontrast(self, obrazek, rozdil):
        sirka, vyska = obrazek.size
        x = 0
        while x < sirka:
            y = 0
            while y < vyska:
                r, g, b = obrazek.getpixel((x,y))
                prumer = int((r+g+b)/3)
                if prumer > 127:
                    obrazek.putpixel((x,y), (r+rozdil, g+rozdil, b+rozdil))
                else:
                    obrazek.putpixel((x,y), (r-rozdil, g-rozdil, b-rozdil))
                y += 1
            x += 1
        display(obrazek)

